<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.academy.nav.ui.welcome.WelcomeFragment"
        android:label="@string/fragment_title_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.academy.nav.ui.login.LoginFragment"
        android:label="@string/fragment_title_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.academy.nav.ui.home.HomeFragment"
        android:label="@string/fragment_title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/nav_settings"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

<!--    TODO 10 - Delete the action_homeFragment_to_favoritesFragment homeFragment_to-->
        <action
            android:id="@+id/action_homeFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.academy.nav.ui.details.DetailsFragment"
        android:label="@string/fragment_title_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="movie"
            app:argType="com.academy.db.model.Movie" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.academy.ui_favorites.FavoritesFragment"
        android:label="@string/fragment_title_favorites"
        tools:layout="@layout/fragment_favorites" />

<!--    TODO 9 - Delete the favoritesFragment destination (we moved to the favorites module graph right?)-->

<!--    TODO 10 - Uncomment the following block to include a reference to the favorites_nav_graph-->
<!--    <include app:graph = "@navigation/favorites_nav_graph"/>-->

<!--    TODO 11 - Uncomment the following block to create a global action which navigates to the favorites nested graph-->
<!--    <action android:id="@+id/action_global_favorites"-->
<!--        app:destination="@id/favorites_nav_graph"/>-->

<!--    TODO 11.1 - notice for the little arrow appears to the left of the nested graph in the editor-->
<!--    TODO 11.2 - Run the app, at the home screen click on the Favorites action, surprise!! it doesn't working! That's totally fine!-->

<!--    TODO 12 - A Quiz!! Where should we use the new globalAction we defined in todo11? Goto todo13 and find out!!-->

    <navigation
        android:id="@+id/nav_settings"
        app:startDestination="@id/settingsFragment">
        <fragment
            android:id="@+id/settingsFragment"
            android:name="com.academy.nav.ui.settings.SettingsFragment"
            android:label="@string/fragment_title_settings"
            tools:layout="@layout/fragment_settings">
            <action
                android:id="@+id/action_settingsFragment_to_more_settings"
                app:destination="@id/more_settings" />
        </fragment>

        <fragment android:id="@+id/more_settings" />

        <action
            android:id="@+id/action_global_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </navigation>
</navigation>